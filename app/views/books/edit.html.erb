
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Editing Book</h1>
      <%= form_with model:@book, local: true do |f| %>
        <% if @book.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h2>errors prohibited this book from being saved:</h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
       <h5>Title</h5>
       <%= f.text_field :title, autofocus: true, class: "form-control" %>
       <h5>Opinion</h5>
       <%= f.text_area :body, autofocus: true, class: "form-control" %>
       <%= f.submit 'Update Book', class: "btn btn-lg btn-block btn-primary" %>
      <% end %>
      <%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>