<div class="side-bar">
  <div class="profile-container">
    <h1>User info</h1>
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "default.jpg" %>
 
    <h6 class="profile-name">name    <%= user.name %></h6>
    <h6 class="profile-introduction">introduction   <%= user.introduction %></h6>
    <% if user.id == current_user.id %>
      <%= link_to(edit_user_path(user), class: "") do %>
      <span class="btn btn-block btn-default"><i class="glyphicon glyphicon-wrench" aria-hidden="true"></i></span>
      <% end %>
    <% end %>
  </div>

  <%= form_with model:book, local:true do |f| %>
    <h1>New book</h1>
    <h5>Title</h5>
    <div><%= f.text_field :title %></div>
    <h5>Opinion</h5>
    <div><%= f.text_area :body %></div>
    <div><%= f.submit "Create Book", class: "btn btn-block btn-primary" %></div>
  <% end %>
</div>