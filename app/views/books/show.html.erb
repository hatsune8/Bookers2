<%= flash[:notice] %>


<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'books/list', book: @book_new, user: @user %>
    </div>
    <div class="col-xs-9">
      <h1>Book detail</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= link_to user_path(@user), class: "" do %>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "default.jpg", size:'50x50' %>
                <% end %>
                <%= link_to user_path(@user), class: "" do %><%= @user.name %><% end %>
            </td>
            <td><%= link_to book_path(@book), class: "" do %><%= @book.title %><% end %></td>
            <td><%= @book.body %></td>
            <td><% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book), class: 'btn btn-success' %> 
                  <%= link_to "Destroy", book_path(@book), class: 'btn btn-danger', method: :delete, data: { confirm: "本当に消しますか？" } %>
                <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
