
<div class="container">
  <h2>User info</h2>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= @user.errors.count %> error prohibited this obj from being saved</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with model:@user, local:true do |f| %>
    <div class="form-group has-icon">
      <label class="" for="inputEmail">Name</label>
      <%= f.text_field :name, autofocus: true %>
      <span class="form-control-icon" aria-hidden="true"></span>
    </div>
    <div class="form-group has-icon">
      <div class="user-edit-image">
        <label class="" for="inputEmail">ProfileImage</label>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "profile-thumb" %>
      </div>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    </div>
    <div class="form-group has-icon">
      <label class="" for="inputEmail">Introduction</label>
      <%= f.text_area :introduction %>
    </div>
    <%= f.submit "Update User" %>
  <% end %>
</div>