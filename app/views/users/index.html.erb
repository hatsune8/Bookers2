<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'books/list', book: @book, user: @user %>
    </div>
    <div class="col-xs-9">
      <h1>All users</h1>
      <table class="table table-striped">
         <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= link_to user_path(user), class: "" do %>
                  <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "default.jpg", size:'50x50' %>
                  <% end %>
                </td>
                <td><%= link_to user_path(user), class: "" do %><%= user.name %><% end %></td>
                <td><%= link_to 'Show', user_path(user) %></td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

